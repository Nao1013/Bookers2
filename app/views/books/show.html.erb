<div class="container px-5 px-sm-0">
  
    <div class="row">
      <div class="col-md-3">

    <%= render 'users/user_list', user: @user %>
    
    <%= render 'bookslists', book_new: @book_new %>
    
     <div class="col-md-8 offset-md-1 mt-3">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100, 100) %>
              <br>
              <%= link_to @book.user.name, user_path(@book.user_id) %>
              </td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger btn-sm", method: :delete, "data-confirm" => "Are you sure?" %></td>
              <% else %>
              <td></td>
              <td></td>
             
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
     </div>
</div>
</div>